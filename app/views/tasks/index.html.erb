<div class="row">
    <aside class="col-sm-4">
        <%= form_with(model: @task, local: true) do |f| %>
            <div class="form-group">
                <%= f.text_area :content, class: 'form-control',rows: 5 %>
            </div>
            <%= f.submit '新規タスク作成', class: 'btn btn-primary btn-block' %>
        <% end %>
    </aside>
    <div class="col-sm-8">
        <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
</div>
