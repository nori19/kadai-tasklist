<ul class="list-unstyled">
    <% tasks.each do |task| %>
        <div class="media-body">
            <div>
                <span class="text-muted">posted at<%= task.created_at %></span>
            </div>
            <div>
                <p class="mb-0"><%= task.content %></p>
            </div>
            <div>
                <% if current_user == task.user %>
                    <%= link_to "編集", edit_task_path(task), class: 'btn btn-primary btn-sm' %>
                    <%= link_to "削除", task, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: 'btn btn-danger btn-sm' %>
                <% end %>
            </div>
        </div>
    <% end %>
    
    <%= paginate tasks %>
</ul>